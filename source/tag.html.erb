<style>
.jumbotron {
  position: relative;
  background: #000 url("/images/<%= tagname %>.jpg") center center;
  width: 100%;
  height: 100%;
  background-size: cover;
  overflow: hidden;
}
.h1 {
  font-size: 2.625em;
  font-weight: 700;
  letter-spacing: -0.03em;
  margin-bottom: 0.571em;
  margin-top: 2em;
  text-align: left;
}
h2 span {
    background-color: white;
}
</style>

<div class="jumbotron" style="height:500px">
  <h2 class="h1"><span><%= tagname %></span></h1>
</div>

<div class="card-columns">
  <% page_articles.each_with_index do |article, i| %>
    <%= partial("summary-cards", :locals => { :article => article, :page_type => page_type } ) %>
  <% end %>
</div>
