<style>
.jumbotron {
  position: relative;
  background: #000 url("/images/<%= tagname %>.jpg") center center;
  width: 100%;
  height: 100%;
  background-size: cover;
  overflow: hidden;
}
</style>

<div class="jumbotron" style="height:500px">
  <h1><%= tagname %></h1>
</div>

<div class="card-columns">
  <% page_articles.each_with_index do |article, i| %>
    <%= partial("summary-cards", :locals => { :article => article, :page_type => page_type } ) %>
  <% end %>
</div>
